<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <title>@ViewBag.Title - Electrical Shop Managment System</title>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    @Styles.Render("~/Content/css-admin")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scripts-admin")
    @RenderSection("styles", required: false)
</head>
<body>
    
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <!-- Logo -->
                    <div class="logo">
                        <h1><a href="index.html">Electrical Shop Administrations</a></h1>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-lg-12">
                            @*<div class="input-group form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="button">Search</button>
                                </span>
                            </div>*@
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="navbar navbar-inverse" role="banner">
                        <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    @if (User != null && User.Identity.IsAuthenticated)
                                    {
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name <b class="caret"></b></a>
                                        <ul class="dropdown-menu animated fadeInUp">
                                            <li><a href="/Auth/Profiler">Hồ sơ của bạn</a></li>
                                            <li><a href="/Auth/SignOut">Đăng xuất</a></li>
                                        </ul>
                                    }
                                    else
                                    {
                                        <a href="/Auth/Login">Đăng nhập</a>
                                    }
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="col-md-2">
                <div class="sidebar content-box" style="display: block;">
                    <ul class="nav">
                        <!-- Main menu -->
                        <li  class="submenu mnu-dashboard">
                            <a href="/Admin/">
                                <i class="glyphicon glyphicon-home"></i> Thống kê
                                <span class="caret pull-right"></span>
                            </a>
                            <!-- Sub menu -->
                            <ul>
                                <li><a href="/Dashboard/EximStat">Xuất nhập tồn</a></li>
                            </ul>
                        </li>
                        <li class="submenu mnu-stock">
                            <a href="/Admin/">
                                <i class="glyphicon glyphicon-calendar"></i> Kho hàng
                                <span class="caret pull-right"></span>
                            </a>
                            <!-- Sub menu -->
                            <ul>
                                <li><a href="/Stock/">Tồn kho</a></li>
                                <li><a href="/Stock/ImportHistory">Nhập hàng</a></li>
                                <li><a href="/Stock/ExportHistory">Xuất hàng</a></li>
                            </ul>
                        </li>
                        <li class="submenu mnu-prod">
                            <a href="/Admin/">
                                <i class="glyphicon glyphicon-th"></i> Mặt hàng
                                <span class="caret pull-right"></span>
                            </a>
                            <!-- Sub menu -->
                            <ul>
                                <li><a href="/Product/">Hàng hóa</a></li>
                                <li><a href="/Category/">Chủng loại</a></li>
                                <li><a href="/Brand/">Nhãn hiệu</a></li>
                                <li><a href="/Supplier/">Nhà cung cấp</a></li>
                            </ul>
                        </li>
                        <li class="submenu mnu-sys">
                            <a href="#">
                                <i class="glyphicon glyphicon-cog"></i> Hệ thống
                                <span class="caret pull-right"></span>
                            </a>
                            <!-- Sub menu -->
                            <ul>
                                <li><a href="/User/">Tài khoản</a></li>
                                <li><a href="/Role/">Chức danh</a></li>
                                <li><a href="/Log/">Hoạt động</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer>
        <div class="container">

            <div class="copy text-center">
                <p>Copyright 2017 <a href='#'>Thiết bị điện Bình Dương</a></p>
                <p>123 Bình Dương</p>
                <p>ĐT: 0909000000</p>

            </div>

        </div>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
