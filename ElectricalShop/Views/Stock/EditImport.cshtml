@model ElectricalShop.Models.Admin.EditImport

@{
    ViewBag.Title = "Điều chỉnh nhập kho";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@using (Html.BeginForm("EditImport", "Stock", null, FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-8 panel-warning">
            <div class="content-box-header panel-heading">
                <div class="panel-title ">@ViewBag.Title</div>
            </div>
            <div class="content-box-large box-with-header">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-12">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.ImportId)
                            @Html.HiddenFor(model => model.ProductId)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Ngày nhập</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.ImportDate, new { @class = "form-control", @placeholder = "Ngày nhập", @style = "width: 100px;" })
                            @Html.ValidationMessageFor(model => model.ImportDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Nhà cung cấp</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(model => model.SupplierId, Model.SupplierSelectOptions, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SupplierId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Mặt hàng nhập</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(model => model.ProductId, Model.ProductSelectOptions, new { @class = "form-control", @disabled = "disabled" })
                            @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Số lượng nhập</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control quantity-input", @placeholder = "Đơn vị lưu kho" })
                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Giá nhập</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.ImportPrice, new { @class = "form-control money-input", @placeholder = "Đơn vị lưu kho" })
                            @Html.ValidationMessageFor(model => model.ImportPrice, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">Ghi chú</label>
                        <div class="col-sm-8">
                            @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @placeholder = "Mô tả chi tiết" })
                            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-sm btn-success" style="width:100px;">Lưu</button>
                            <button type="reset" class="btn btn-sm btn-danger" style="width:100px;">Nhập lại</button>
                            @Html.ActionLink("Trở về", "ImportHistory", null, new { @style = "width:100px;", @class = "btn btn-sm btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@Scripts.Render("~/bundles/jqueryval")
@section Styles {
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/Scripts/jquery-number/jquery.number.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script>

        $(document).ready(function () {
            $('#ImportDate').datetimepicker({
                format: 'DD/MM/YYYY',
                showTodayButton: true
            })

            $('.quantity-input').number(true, 0);
            $('.money-input').number(true, 0);
        })

        $('.mnu-prod').attr('class', 'submenu mnu-prod open');
    </script>
}



